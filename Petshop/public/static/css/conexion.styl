body
    background-color #f6f6f6
    margin 0px

.box
    background-color #fff
    border-radius 8px   
    border 1px solid #d6d6d6
    position absolute 
    padding 16px
    width 500px 
    .btn-success
        background-color #AE64D3
        border 0px
        width 100%
    .form-control
        &:focus
        &:active
            outline none 
            box-shadow none

//clase para margen de boxes, botones, etc
.mtop16
    margin-top 16px

//centrado del login, es el 50% menos la mitad del tama√±o top y left
.box_login
    left calc(50% - 250px)
    top calc(50% - 121px)