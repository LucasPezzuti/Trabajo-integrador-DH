body
    background-color #f6f6f6
    margin 0px
    font-size 14px

.box
    background-color #fff
    border-radius 8px   
    border 1px solid #d6d6d6
    position absolute 
    width 500px 
    .btn-success
        background-color #AE64D3
        border 0px
        width 100%
    .form-control
        &:focus
        &:active
            outline none 
            box-shadow none
    .inside 
        padding 16px
    .header
        //background-color #00acff    
        padding 16px
        border-radius 8px 8px 0px 0px
        a
            img 
                width 40%
                display block
                margin 0px auto 
  .footer
        text-align center
        a 
            display inline-block
            font-size .8em
            &:last-child 
                margin-left 24px             

//clase para margen de boxes, botones, etc
.mtop16
    margin-top 16px

//centrado del login, es el 50% menos la mitad del tama√±o top y left
.box_login
    left calc(50% - 250px)
    top calc(30% - 121px)
 